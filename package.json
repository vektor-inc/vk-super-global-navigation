{
	"name": "vk-super-global-navigation",
	"version": "1.0.0",
	"description": "The global navigatiom on Vektor,Inc. official site",
	"author": "Vektor,Inc",
	"license": "MIT",
	"main": "Gruntfile.js",
	"scripts": {
		"start": "npm run build && npx wp-env start",
		"readme": "grunt readme",
		"i18n": "grunt i18n",
		"all": "run-p watch",
		"dist": "composer install --no-dev && npx gulp dist",
		"sass": "sass --watch --style=compressed --no-source-map src/_scss:build/css",
		"build": "composer install --no-dev && npm run build:css",
		"build:css": "sass --style=compressed --no-source-map src/_scss:build/css",
		"watch": "nodemon -e scss --watch src/_scss -x \"npm run build:css\""
	},
	"devDependencies": {
		"@wordpress/env": "^4.1.3",
		"autoprefixer": "^10.4.0",
		"cssnano": "^5.0.12",
		"grunt": "~1.4.1",
		"grunt-wp-i18n": "~1.0.3",
		"grunt-wp-readme-to-markdown": "~2.1.0",
		"gulp": "^4.0.2",
		"gulp-replace": "^1.1.3",
		"node-sass": "^7.0.0",
		"npm-check-updates": "^12.0.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.5",
		"postcss-cli": "^9.1.0",
		"nodemon": "^2.0.12",
		"sass": "^1.45.0",
		"watch": "^1.0.2"
	}
}
